    <form asp-controller="ThongTinHenKham" asp-action="XacNhanThongTinHenKham" method="post">
        @*HoTen*@
        <input type="hidden" asp-for="HoTen" class="form-input" value="@Model?.HoTen" />
        <input type="hidden" asp-for="SoDienThoai" class="form-input" value="@Model?.SoDienThoai" />
        <input type="hidden" asp-for="NgaySinh" class="form-input" value="@Model?.NgaySinh" />
        <input type="hidden" asp-for="GioiTinh" class="form-input" value="@Model?.GioiTinh" />
        <input type="hidden" asp-for="DiaChi" class="form-input" value="@Model?.DiaChi" />
        <input type="hidden" asp-for="PhongKhamID" class="form-input" value="@Model?.PhongKhamID" />
        <input type="hidden" asp-for="LoaiKhamID" class="form-input" value="@Model?.LoaiKhamID" />
        <input type="hidden" asp-for="NgayHenKham" class="form-input" value="@Model?.NgayHenKham" />
        <input type="hidden" asp-for="LyDoKham" class="form-input" value="@Model?.LyDoKham" />
        <input type="hidden" asp-for="TrangThai" class="form-input" value="0" />
        <input type="hidden" asp-for="NguoiDungID" class="form-input" value="@Model?.NguoiDungID" />
        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="dk-button">Xác nhận</button>
                <div asp-validation-summary="All" class="text-red"></div>
            </div>
        </div>

    </form>
</div>
