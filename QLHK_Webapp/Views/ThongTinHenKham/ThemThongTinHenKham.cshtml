@model ThongTinHenKhamRequest
<table class="table mb custom-table">
    <tr>
        <td> 1. Đăng ký khám</td>
        <td class="arrow">></td>
        <td><span class="text-red"> 2. Xác nhận</span></td>
        <td class="arrow">></td>
        <td>3. Hoàn tất</td>
    </tr>
</table>

<div class="container-form center-box">
    <h3 class="text-center" style="padding-top: 20px; padding-left:20px;">Xem lại thông tin đăng ký</h3>
    <table>
        <tr>
            <td class="with-30 bold">Họ và tên:</td>
            <td> @Model?.HoTen</td>
        </tr>
        <tr>
            <td class="with-30 bold">Số điện thoại:</td>
            <td>@Model?.SoDienThoai</td>
        </tr>
        <tr>
            <td class="with-30 bold">Ngày sinh:</td>
            <td>@Model?.NgaySinh?.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <td class="with-30 bold">
                Giới tính:
             </td>
             <td>
                @Model?.GioiTinh
             </td>
        </tr>
        <tr>
            <td class="with-30 bold">Địa chỉ:</td>
            <td>@Model?.DiaChi</td>
        </tr>
        <tr>
            <td class="with-30 bold">Phòng khám:</td>
            <td>
                @if(ViewBag?.PhongKham.PhongKhamID == Guid.Empty){

                }else{
                    @ViewBag?.PhongKham.TenPhongKham
                }
                
            </td>
        </tr>
        <tr>
            <td class="with-30 bold">
                Loại khám:
            </td>
            <td>
                @if (@ViewBag?.LoaiKham.LoaiKhamID == Guid.Empty){

                }else{
                    @ViewBag?.LoaiKham.TenLoaiKham
                }
            </td>
        </tr>
        <tr>
            <td class="with-30 bold">Ngày hẹn khám:</td>
            <td>@Model?.NgayHenKham?.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <td class="with-30 bold">Lý do khám:</td>
            <td>@Model?.LyDoKham</td>
        </tr>
    </table>
